            android:label="шовш┤н">
            <intent-filter>
                <action android:name="com.wanba.ott.intent.ORDER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".MikeLingChannelActivity">
            <intent-filter>
                <action android:name="com.wanba.ott.intent.MIKELING_CHANNEL" />
                <category android:name="ANDROID.INTENT.CATEGORY.DEFAULT" />
