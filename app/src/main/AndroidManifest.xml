            <intent-filter>
                <action android:name="com.wanba.ott.intent.WANGGUANGCHEGN_CHANNEL" />
                <category android:name="ANDROID.INTENT.CATEGORY.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>