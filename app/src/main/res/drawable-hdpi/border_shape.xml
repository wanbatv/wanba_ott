<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    
	<solid android:color="#000000" />

    <!-- 设置边距-->
    <padding
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp" />

    <!--控制边界线颜色和笔触大小-->
    <stroke
        android:width="1dp"
        android:color="#CdCdCd" />

    <!--控制圆角大小-->
    <corners android:radius="1dp" />
    
</shape>

