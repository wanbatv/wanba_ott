<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp">
        <ImageView
            android:id="@+id/channel_order_wizzard_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_back"
            android:focusable="true"
            android:layout_marginRight="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textColor="#ffffffff"
            android:textSize="32sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
        <TextView
            android:id="@+id/channel_order_wizzard_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="产品订购"
            android:textColor="#ffffffff"
            android:textSize="72sp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="64dp">
                <ImageView
                    android:id="@+id/channel_order_wizzard_primary_btn_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/channel_order_wizzard_btn_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/order_wizzard_primary_btn"
                    android:focusable="true"
                    android:layout_gravity="bottom|center_horizontal"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/channel_order_wizzard_secondary_btn_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/channel_order_wizzard_btn_secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/order_wizzard_secondary_btn"
                    android:focusable="true"
                    android:layout_gravity="bottom|center_horizontal"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>