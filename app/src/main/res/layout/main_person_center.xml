<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="936dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="49.5dp"
            android:layout_marginStart="49.5dp"
            android:background="@drawable/record_bg" >

            <ImageView
                android:layout_width="139dp"
                android:layout_height="182dp"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/userface" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:gravity="start|center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/prev_week_hour"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="50dp"
                    android:gravity="center_horizontal"
                    android:textColor="#fecb00"
                    android:textSize="40sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/prev_week_minute"
                    android:layout_width="54dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="50dp"
                    android:gravity="center_horizontal"
                    android:textColor="#fecb00"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/prev_calorie"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="266dp"
                    android:layout_marginStart="266dp"
                    android:layout_marginTop="50dp"
                    android:gravity="center_horizontal"
                    android:textColor="#fecb00"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/last_week_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="553dp"
                    android:layout_marginStart="553dp"
                    android:layout_marginTop="38dp"
                    android:text="5小时46分"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/last_week_calorie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/last_week_hours"
                    android:layout_marginLeft="553dp"
                    android:layout_marginStart="553dp"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="153dp"
                    android:gravity="end|center_horizontal"
                    android:textColor="#fecb00"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="310dp"
                    android:layout_marginStart="310dp"
                    android:layout_marginTop="153dp"
                    android:gravity="center_horizontal"
                    android:textColor="#fecb00"
                    android:textSize="40sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="210dp"
            android:layout_height="218dp"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:src="@drawable/weixin01" />
    </LinearLayout>

    
